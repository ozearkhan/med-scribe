# LLM Provider Configuration (Gemini API)
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model Configuration
GEMINI_DEFAULT_MODEL=gemini-2.0-flash-exp
GEMINI_RERANKING_MODEL=gemini-2.0-flash-exp
GEMINI_ATTRIBUTE_MODEL=gemini-2.0-flash-exp

# Model Parameters
MODEL_DEFAULT_TEMPERATURE=0.1
MODEL_DEFAULT_MAX_TOKENS=4000
MODEL_RERANKING_TEMPERATURE=0.1
MODEL_RERANKING_MAX_TOKENS=1000
MODEL_ATTR_GEN_TEMPERATURE=0.1
MODEL_ATTR_GEN_MAX_TOKENS=4000
MODEL_ATTR_EVAL_TEMPERATURE=0.1
MODEL_ATTR_EVAL_MAX_TOKENS=1000

# Embedding Configuration (Local - sentence-transformers)
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# API Configuration
API_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
API_MAX_FILE_SIZE_MB=50
API_TEMP_FILE_CLEANUP_HOURS=24

# Dataset Paths
DATASETS_DIR=../data/datasets
EMBEDDINGS_DIR=../data/embeddings
OUTPUT_DIR=./data/output